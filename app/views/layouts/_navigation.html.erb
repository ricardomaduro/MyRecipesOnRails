<header class="navbar navbar-fixed-top navbar-default navbar-right">
    <div class="container">
      <%=link_to (image_tag("https://cdn4.iconfinder.com/data/icons/X-Mac/education_icons/png/64/teachers_day.png")) + "Recipes on Rails", root_path, style:"color:black; font-size: 15px", id: "logo"%>
      
      <div class="nav_ul_item">
        <li class="dropdown">
          <%= link_to '#', class:"btn btn-sm btn-default dropdown-toggle", "data-toggle" => "dropdown" do %>
            Styles <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <% Style.all.each do |style| %>
              <li><%= link_to style.name, style_path(style) %></li>
            <% end %>
            <% if logged_in? %>
            <li class='divider'></li>
            <li>
              <%= link_to(new_style_path) do %>
                New style
              <% end %>
            </li>
            <% end %>
          </ul>
        </li>
      </div>
      <div class="nav_ul_item">
        <li class="dropdown">
          <%= link_to '#', class:"btn btn-sm btn-default dropdown-toggle", "data-toggle" => "dropdown" do %>
            Ingredients <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <% Ingredient.all.each do |ing| %>
              <li><%= link_to ing.name, ingredient_path(ing) %></li>
            <% end %>
            <% if logged_in? %>
            <li class='divider'></li>
            <li>
              <%= link_to(new_ingredient_path) do %>
                New ingredient
              <% end %>
            </li>
            <% end %>
          </ul>
        </li>
      </div>
      
      <% if logged_in? %>
        <ul class="nav-item pull-right" style="margin-top:40px; list-style-type:none">
          <li class="dropdown">
            <%= link_to '#', class:"btn btn-sm btn-danger dropdown-toggle", "data-toggle" => "dropdown" do %>
              <%= current_user.chefname %> <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to "View my recipes", chef_path(current_user) %></li>
              <li><%= link_to "Edit profile", edit_chef_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to "Logout", logout_path %></li>
            </ul>
          </li>
        </ul>
        <div class="nav-item" style="margin-top:40px">
          <%=link_to "New recipe",new_recipe_path,class: "btn btn-sm btn-default"%>
        </div>
      <% else %>
        <div class="nav-item pull-right" style="margin-top:40px">
          <%=link_to "Login",login_path,class: "btn btn-sm btn-success"%>
        </div>
      <% end %>
        
      
    </div>
  </header>