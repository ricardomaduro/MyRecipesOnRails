<%= render 'shared/page_title', title: @recipe.name %>

<div class="row">
    <div class="col-md-4 pull-right center">
        <!--<section>
                <p><span class="glyphicon glyphicon-user" aria-hidden="true"></span><%= @recipe.chef.chefname %></p>
        </section>-->
        <p>
            <h5>
                Brough to you by: <%=@recipe.chef.chefname%>
            </h5>
        </p>
    </div>
    <div class="col-md-8">
        <%= link_to "Edit this recipe", edit_recipe_path(@recipe), class: "btn btn-success pull-right" %>
        <h3><%=@recipe.summary%></h3>
        <div class="well">
            <p>
                <strong>Steps:</strong>
                <p>
                    <%= simple_format(@recipe.description) %>
                </p>
            </p>
        </div>
    </div>
</div>

<h5><%= link_to "Return to recipes listing", recipes_path, class:"btn btn-small btn-warning"%></h5>